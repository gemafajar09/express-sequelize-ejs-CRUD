<%- include('../component/header') %>
<div class="row py-3">
    <div class="col-md-12 mx-auto">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <div class="float-left">
                    Data USer
                </div>
                <div class="float-right">
                    <a href="/userinput" class="btn btn-outline-success"><i class="fa fa-plus"></i></a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Nama</th>
                            <th>Username</th>
                            <th style="text-align: center; width:20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < user.length; i++) { %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= user[i].nama %></td>
                            <td><%= user[i].username %></td>
                            <td style="text-align:center">
                                <a style="width:80px" href="/useredit/<%= user[i].id %>" class="btn btn-outline-warning">edit</a>
                                <a style="width:80px" href="/userdelete/<%= user[i].id %>" class="btn btn-outline-danger">hapus</a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('../component/footer') %>